<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.ds.DukeStudy.ProfileFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <!--<ImageButton android:id="@+id/profileImageButton"-->

    <ImageView android:id="@+id/profileImageView"
        android:layout_width="299dp"
        android:layout_height="243dp"
        android:layout_marginTop="50dip"
        android:layout_marginLeft="50dip"
        android:layout_marginBottom="50dip"
        android:src="@drawable/ic_menu_profile"
        android:layout_weight="0.05" />
    <Button
        android:text="Upload Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editImageButton"
        android:layout_weight="0.09" />

    <TextView
        android:text="Name : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userNameView"
        android:layout_weight="0.20"/>

    <TextView
        android:text="Email : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailView"
        android:layout_weight="0.20" />

    <TextView
        android:text="Major : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/majorView"
        android:layout_weight="0.20"/>

    <TextView
        android:text="Year : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classView"
        android:layout_weight="0.20" />

    <Button
        android:text="Edit Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editProfileButton" />

</LinearLayout>
