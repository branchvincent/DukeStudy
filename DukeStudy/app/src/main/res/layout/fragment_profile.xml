<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileContent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.ds.DukeStudy.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<ImageButton android:id="@+id/profileImageButton"-->
    <ImageView android:id="@+id/profileImageButton"
        android:layout_width="260dp"
        android:layout_height="243dp"
        android:layout_marginTop="50dip"
        android:layout_marginLeft="50dip"
        android:layout_marginBottom="50dip"
        android:src="@drawable/sample_profile_pic"
        />

    <TextView
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userNameView"
        android:layout_weight="0.20"/>

    <TextView
        android:text="Email: jb@duke.edu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailView"
        android:layout_weight="0.20" />

    <TextView
        android:text="Major: Music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/majorView"
        android:layout_weight="0.20"/>

    <TextView
        android:text="Year: Class of 2018"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/classView"
        android:layout_weight="0.20" />

    <Button
        android:text="Edit Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editProfileButton" />

</LinearLayout>
